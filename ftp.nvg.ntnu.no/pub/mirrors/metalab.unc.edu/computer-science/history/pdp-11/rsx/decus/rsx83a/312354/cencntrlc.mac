	.TITLE	CNTRLC
	.IDENT	/V01/
;
;	THIS IS AN UNSOLICITED INPUT AST THAT IS ENTERED WHENEVER
;	A CONTROL-C IS INPUT ON THE VT100 KEYBOARD. IT SETS THE
;	DIRECTION INDICATOR TO -1, WHICH INDICATES TO EXIT THE TASK.
;
	.PSECT	DIRCOM,D,GBL,OVR
DIRCOD:	.BLKW	1
FIRCOD:	.BLKW	1
	.PSECT	$CODE1,RO
	.MCALL	ASTX$S
CNTRLC::MOV	#-1,DIRCOD
	TST	(SP)+
	ASTX$S
	.END
