	.TITLE	TSTBIT
	.IDENT	/V01/
;
;	THIS FUNCTION TESTS IF THE BITS SPECIFIED IN BITMSK ARE
;	SET IN THE DATA.   CALLING SEQUENCE: II = TSTBIT(DATA,BITMSK)
;	R0 IS SET TO ONE IF ANY OF THE BITS ARE SET, ZERO ELSEWISE.
;
	.PSECT	$CODE1,RO
TSTBIT::
	BITB	@2(R5),@4(R5)		;TEST BITS
	BEQ	NO			;BRANCH IF NONE SET
	MOV	#1,R0			;RETURN A ONE
	RETURN
NO:	MOV	#0,R0			;ELSE RETURN A ZERO
	RETURN
	.END
